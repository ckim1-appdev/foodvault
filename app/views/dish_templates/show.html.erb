<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Dish #<%= @dish.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/dishes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/dishes/<%= @dish.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit dish
        </a>
      </div>

      <div class="col">
        <a href="/delete_dish/<%= @dish.id %>" class="btn btn-block btn-outline-secondary">
          Delete dish
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @dish.name %>
      </dd>

      <dt>
        Cuisine
      </dt>
      <dd>
        <%= @dish.cuisine %>
      </dd>

      <dt>
        Meal category
      </dt>
      <dd>
        <%= @dish.meal_category %>
      </dd>

      <dt>
        Picture
      </dt>
      <dd>
        <img src="<%= @dish.picture %>" class="img-fluid">
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @dish.description %>
      </dd>

      <dt>
        Ingredient count
      </dt>
      <dd>
        <%= @dish.ingredient_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@dish.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@dish.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "dish_templates/dish_dishhasingredients" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "dish_templates/dish_ingredients" %>
  </div>
</div>
