<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Dishhasingredients

    <a data-toggle="collapse" href="#dish_dishhasingredients_new_form">
      Add dish has ingredient
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dish.dishhasingredients.each do |dish_has_ingredient| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/dish_has_ingredients/<%= dish_has_ingredient.id %>">
          <%= dish_has_ingredient.dish_id %>
        </a>

        <a href="/delete_dish_has_ingredient_from_dish/<%= dish_has_ingredient.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dish_dishhasingredients_new_form">
        <%= render partial: "dish_templates/dish_dishhasingredients_new_form" %>
      </div>
    </div>

  </ul>
</div>
