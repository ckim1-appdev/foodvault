<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ingredients
    </h1>

    <a href="/ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new ingredient
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Quality
        </th>

        <th>
          Food group
        </th>

        <th>
          Picture
        </th>

        <th>
          Image
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ingredients.each do |ingredient| %>
      <tr>
        <!-- Display ingredient.id start -->
        <td>
          <%= ingredient.id %>
        </td>
        <!-- Display ingredient.id end -->

        <!-- Display ingredient.name start -->
        <td>
          <%= ingredient.name %>
        </td>
        <!-- Display ingredient.name end -->

        <!-- Display ingredient.quality start -->
        <td>
          <%= ingredient.quality %>
        </td>
        <!-- Display ingredient.quality end -->

        <!-- Display ingredient.food_group start -->
        <td>
          <%= ingredient.food_group %>
        </td>
        <!-- Display ingredient.food_group end -->

        <!-- Display ingredient.picture start -->
        <td>
          <img src='<%= ingredient.picture %>' class='img-fluid'>
        </td>
        <!-- Display ingredient.picture end -->

        <!-- Display ingredient.image start -->
        <td>
          <%= ingredient.image %>
        </td>
        <!-- Display ingredient.image end -->

        <!-- Display ingredient.user_id start -->
        <td>
          <%= ingredient.director.created_at %>
        </td>
        <!-- Display ingredient.user_id end -->

        <!-- Display ingredient.created_at start -->
        <td>
          <%= time_ago_in_words(ingredient.created_at) %> ago
        </td>
        <!-- Display ingredient.created_at end -->

        <!-- Display ingredient.updated_at start -->
        <td>
          <%= time_ago_in_words(ingredient.updated_at) %> ago
        </td>
        <!-- Display ingredient.updated_at end -->

        <td>
          <a href="/ingredients/<%= ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
