<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Billhasingredients

    <a data-toggle="collapse" href="#ingredient_billhasingredients_new_form">
      Add bill has ingredient
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @ingredient.billhasingredients.each do |bill_has_ingredient| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/bill_has_ingredients/<%= bill_has_ingredient.id %>">
          <%= bill_has_ingredient.bill_id %>
        </a>

        <a href="/delete_bill_has_ingredient_from_ingredient/<%= bill_has_ingredient.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="ingredient_billhasingredients_new_form">
        <%= render partial: "ingredient_templates/ingredient_billhasingredients_new_form" %>
      </div>
    </div>

  </ul>
</div>
