<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Dishhasingredients

    <a data-toggle="collapse" href="#ingredient_dishhasingredients_new_form">
      Add dish has ingredient
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @ingredient.dishhasingredients.each do |dish_has_ingredient| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/dish_has_ingredients/<%= dish_has_ingredient.id %>">
          <%= dish_has_ingredient.dish_id %>
        </a>

        <a href="/delete_dish_has_ingredient_from_ingredient/<%= dish_has_ingredient.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="ingredient_dishhasingredients_new_form">
        <%= render partial: "ingredient_templates/ingredient_dishhasingredients_new_form" %>
      </div>
    </div>

  </ul>
</div>
