<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bill has ingredients
    </h1>

    <a href="/bill_has_ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new bill has ingredient
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Bill
        </th>

        <th>
          Ingredient
        </th>

        <th>
          Quantity
        </th>

        <th>
          Bill ingredient unit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bill_has_ingredients.each do |bill_has_ingredient| %>
      <tr>
        <!-- Display bill_has_ingredient.id start -->
        <td>
          <%= bill_has_ingredient.id %>
        </td>
        <!-- Display bill_has_ingredient.id end -->

        <!-- Display bill_has_ingredient.bill_id start -->
        <td>
          <%= bill_has_ingredient.bill.created_at %>
        </td>
        <!-- Display bill_has_ingredient.bill_id end -->

        <!-- Display bill_has_ingredient.ingredient_id start -->
        <td>
          <%= bill_has_ingredient.ingredient.name %>
        </td>
        <!-- Display bill_has_ingredient.ingredient_id end -->

        <!-- Display bill_has_ingredient.quantity start -->
        <td>
          <%= bill_has_ingredient.quantity %>
        </td>
        <!-- Display bill_has_ingredient.quantity end -->

        <!-- Display bill_has_ingredient.bill_ingredient_unit start -->
        <td>
          <%= bill_has_ingredient.bill_ingredient_unit %>
        </td>
        <!-- Display bill_has_ingredient.bill_ingredient_unit end -->

        <!-- Display bill_has_ingredient.created_at start -->
        <td>
          <%= time_ago_in_words(bill_has_ingredient.created_at) %> ago
        </td>
        <!-- Display bill_has_ingredient.created_at end -->

        <!-- Display bill_has_ingredient.updated_at start -->
        <td>
          <%= time_ago_in_words(bill_has_ingredient.updated_at) %> ago
        </td>
        <!-- Display bill_has_ingredient.updated_at end -->

        <td>
          <a href="/bill_has_ingredients/<%= bill_has_ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @bill_has_ingredients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
