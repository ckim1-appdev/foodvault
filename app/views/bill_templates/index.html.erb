<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bills
    </h1>

    <a href="/bills/new" class="btn btn-block btn-outline-secondary">
      Add a new bill
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Date purchased
        </th>

        <th>
          Ingredient count
        </th>

        <th>
          Grocery store
        </th>

        <th>
          Price
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bills.each do |bill| %>
      <tr>
        <!-- Display bill.id start -->
        <td>
          <%= bill.id %>
        </td>
        <!-- Display bill.id end -->

        <!-- Display bill.date_purchased start -->
        <td>
          <%= bill.date_purchased %>
        </td>
        <!-- Display bill.date_purchased end -->

        <!-- Display bill.ingredient_count start -->
        <td>
          <%= bill.ingredient_count %>
        </td>
        <!-- Display bill.ingredient_count end -->

        <!-- Display bill.grocery_store start -->
        <td>
          <%= bill.grocery_store %>
        </td>
        <!-- Display bill.grocery_store end -->

        <!-- Display bill.price start -->
        <td>
          <%= bill.price %>
        </td>
        <!-- Display bill.price end -->

        <!-- Display bill.user_id start -->
        <td>
          <%= bill.user_id %>
        </td>
        <!-- Display bill.user_id end -->

        <!-- Display bill.created_at start -->
        <td>
          <%= time_ago_in_words(bill.created_at) %> ago
        </td>
        <!-- Display bill.created_at end -->

        <!-- Display bill.updated_at start -->
        <td>
          <%= time_ago_in_words(bill.updated_at) %> ago
        </td>
        <!-- Display bill.updated_at end -->

        <td>
          <a href="/bills/<%= bill.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
