<form action="/create_bill_has_ingredient_from_bill" method="post">

  <input type="hidden" name="bill_id" value="<%= @bill.id %>">

  <div class="form-group">
    <label for="ingredient_id">
      Ingredient
    </label>

    <%= select_tag(:ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name, @bill_has_ingredient.ingredient_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="quantity">
      Quantity
    </label>

    <input type="text" id="quantity" name="quantity" class="form-control" value="<%= @bill_has_ingredient.quantity %>">
  </div>

  <div class="form-group">
    <label for="bill_ingredient_unit">
      Bill ingredient unit
    </label>

    <textarea id="bill_ingredient_unit" name="bill_ingredient_unit" class="form-control" rows="3"><%= @bill_has_ingredient.bill_ingredient_unit %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create bill has ingredient
  </button>
</form>
