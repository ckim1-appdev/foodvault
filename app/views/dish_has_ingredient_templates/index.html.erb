<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All dish has ingredients
    </h1>

    <a href="/dish_has_ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new dish has ingredient
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Dish
        </th>

        <th>
          Ingredient
        </th>

        <th>
          Quantity
        </th>

        <th>
          Dish ingredient unit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @dish_has_ingredients.each do |dish_has_ingredient| %>
      <tr>
        <!-- Display dish_has_ingredient.id start -->
        <td>
          <%= dish_has_ingredient.id %>
        </td>
        <!-- Display dish_has_ingredient.id end -->

        <!-- Display dish_has_ingredient.dish_id start -->
        <td>
          <%= dish_has_ingredient.dish.name %>
        </td>
        <!-- Display dish_has_ingredient.dish_id end -->

        <!-- Display dish_has_ingredient.ingredient_id start -->
        <td>
          <%= dish_has_ingredient.ingredient.name %>
        </td>
        <!-- Display dish_has_ingredient.ingredient_id end -->

        <!-- Display dish_has_ingredient.quantity start -->
        <td>
          <%= dish_has_ingredient.quantity %>
        </td>
        <!-- Display dish_has_ingredient.quantity end -->

        <!-- Display dish_has_ingredient.dish_ingredient_unit start -->
        <td>
          <%= dish_has_ingredient.dish_ingredient_unit %>
        </td>
        <!-- Display dish_has_ingredient.dish_ingredient_unit end -->

        <!-- Display dish_has_ingredient.created_at start -->
        <td>
          <%= time_ago_in_words(dish_has_ingredient.created_at) %> ago
        </td>
        <!-- Display dish_has_ingredient.created_at end -->

        <!-- Display dish_has_ingredient.updated_at start -->
        <td>
          <%= time_ago_in_words(dish_has_ingredient.updated_at) %> ago
        </td>
        <!-- Display dish_has_ingredient.updated_at end -->

        <td>
          <a href="/dish_has_ingredients/<%= dish_has_ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @dish_has_ingredients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
