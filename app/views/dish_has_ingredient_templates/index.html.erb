<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All dish has ingredients
    </h1>

    <a href="/dish_has_ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new dish has ingredient
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "dish_has_ingredient_templates/dish_has_ingredients_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Dish
        </th>

        <th>
          Ingredient
        </th>

        <th>
          Quantity
        </th>

        <th>
          Dish ingredient unit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @dish_has_ingredients.each do |dish_has_ingredient| %>
      <tr>
        <td>
          <%= dish_has_ingredient.id %>
        </td>

        <td>
          <% if dish_has_ingredient.dish.present? %>
            <a href="/dishes/<%= dish_has_ingredient.dish.id %>">
              <%= dish_has_ingredient.dish.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if dish_has_ingredient.ingredient.present? %>
            <a href="/ingredients/<%= dish_has_ingredient.ingredient.id %>">
              <%= dish_has_ingredient.ingredient.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= dish_has_ingredient.quantity %>
        </td>

        <td>
          <%= dish_has_ingredient.dish_ingredient_unit %>
        </td>

        <td>
          <%= time_ago_in_words(dish_has_ingredient.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(dish_has_ingredient.updated_at) %> ago
        </td>

        <td>
          <a href="/dish_has_ingredients/<%= dish_has_ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @dish_has_ingredients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
