<% if @dish_has_ingredient.errors.any? %>
  <% @dish_has_ingredient.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit dish has ingredient #<%= @dish_has_ingredient.id %>
</h1>

<hr>

<form action="/update_dish_has_ingredient/<%= @dish_has_ingredient.id %>" method="post">

  <div class="form-group">
    <label for="dish_id">
      Dish
    </label>

    <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :name, @dish_has_ingredient.dish_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="ingredient_id">
      Ingredient
    </label>

    <%= select_tag(:ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name, @dish_has_ingredient.ingredient_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="quantity">
      Quantity
    </label>

    <input type="text" id="quantity" name="quantity" class="form-control" value="<%= @dish_has_ingredient.quantity %>">
  </div>

  <div class="form-group">
    <label for="dish_ingredient_unit">
      Dish ingredient unit
    </label>

    <textarea id="dish_ingredient_unit" name="dish_ingredient_unit" class="form-control" rows="3"><%= @dish_has_ingredient.dish_ingredient_unit %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update dish has ingredient
  </button>
</form>

<hr>

<a href="/dish_has_ingredients">
  Go back
</a>
